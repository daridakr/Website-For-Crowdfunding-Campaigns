@model PaymentViewModel
<div class="container pt-lg-7" style="padding-top: 3rem !important;">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card bg-secondary shadow border-0">
                <div class="card-header bg-white pb-5" style="padding-bottom: 1.5rem !important;">
                    <div class="card-body px-lg-5 py-lg-5" style="padding-bottom: 1rem !important;">
                        <h3 class="display-4" style="color: black">Поддержать проект</h3>
                        <form asp-area="" asp-controller="Payment" asp-action="Donate" method="post">
                            <div asp-validation-summary="All"></div>
                            <input asp-for="CampaignId" type="hidden" name="id" value="@ViewBag.CampId"/>
                            <div class="form-group">
                                <div class="input-group input-group-alternative">
                                    <input asp-for="Sum" type="text" data-type="number" maxlength="10" class="form-control" placeholder="Сумма (руб.)">
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="input-group input-group-alternative">
                                    <input asp-for="Card" type="text" maxlength="16" minlength="16" class="form-control" placeholder=" Номер карты" />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="input-group input-group-alternative">
                                    <input asp-for="MounthYear" type="month" class="form-control" placeholder="Месяц/год" />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="input-group input-group-alternative">
                                    <input asp-for="CVC" type="text" maxlength="3" minlength="3" placeholder="CVC/CVV код" class="form-control">
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" class="btn btn-primary my-4" value="Оплатить" />
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>